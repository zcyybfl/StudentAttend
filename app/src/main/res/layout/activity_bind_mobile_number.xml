<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BindMobileNumberActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_number_bind"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00BCD4"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/number_bind_return"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/number_bind_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="@string/mobile_number" />

    </RelativeLayout>

    <EditText
        android:id="@+id/telephone"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:hint="@string/telephone"
        android:maxLength="11"
        app:layout_constraintBaseline_toBaselineOf="@+id/verification_code_button"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_number_bind"
        app:layout_constraintRight_toLeftOf="@+id/verification_code_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/input_background"
        android:autofillHints="phone"
        android:inputType="number"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/verification_code_button"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#06D5EF"
        android:text="@string/code_button"
        app:layout_constraintLeft_toRightOf="@+id/telephone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_number_bind"/>

    <EditText
        android:id="@+id/verification_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:hint="@string/verification_code"
        android:maxLength="6"
        android:background="@drawable/input_background"
        app:layout_constraintTop_toBottomOf="@+id/telephone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:autofillHints="verification_code"
        android:inputType="number" />

    <TextView
        android:id="@+id/error_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#F44336"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/submit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="@string/submit"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@+id/error_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>